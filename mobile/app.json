{
  "expo": {
    "name": "Bolsover Site",
    "slug": "bolsover-site",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.bolsover.site"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e40af"
      },
      "package": "com.bolsover.site"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Bolsover Site to take photos for daily reports"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Bolsover Site to access photos for daily reports"
        }
      ]
    ]
  }
}
